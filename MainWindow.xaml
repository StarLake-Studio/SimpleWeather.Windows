<Window
    x:Class="SimpleWeather.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleWeather.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="简约天气">

    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title bar -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" Background="Transparent">
            <TextBlock x:Name="AppTitle" 
                       Text="简约天气" 
                       Style="{StaticResource CaptionTextBlockStyle}" 
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Main content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Location and search -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="LocationTextBox" 
                         PlaceholderText="请输入城市名称" 
                         Width="200" 
                         Margin="0,0,10,0"/>
                <Button x:Name="SearchButton" 
                        Content="搜索" 
                        Click="SearchButton_Click"/>
            </StackPanel>
            
            <!-- Weather information -->
            <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
                <StackPanel>
                    <!-- Current weather -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="LocationText" 
                                       Text="未知位置" 
                                       Style="{ThemeResource TitleTextBlockStyle}"/>
                            <TextBlock x:Name="DateText" 
                                       Text="日期" 
                                       Style="{ThemeResource BodyTextBlockStyle}" 
                                       Margin="0,5,0,0"/>
                            <TextBlock x:Name="DescriptionText" 
                                       Text="天气描述" 
                                       Style="{ThemeResource SubtitleTextBlockStyle}" 
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock x:Name="TemperatureText" 
                                       Text="0°C" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Weather details -->
                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="详细信息" 
                                   Style="{ThemeResource SubtitleTextBlockStyle}" 
                                   Margin="0,0,0,10"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="体感温度" Style="{ThemeResource BodyTextBlockStyle}"/>
                                <TextBlock x:Name="FeelsLikeText" Text="0°C" Style="{ThemeResource BodyTextBlockStyle}" Margin="0,5,0,15"/>
                                
                                <TextBlock Text="湿度" Style="{ThemeResource BodyTextBlockStyle}"/>
                                <TextBlock x:Name="HumidityText" Text="0%" Style="{ThemeResource BodyTextBlockStyle}" Margin="0,5,0,15"/>
                                
                                <TextBlock Text="气压" Style="{ThemeResource BodyTextBlockStyle}"/>
                                <TextBlock x:Name="PressureText" Text="0 hPa" Style="{ThemeResource BodyTextBlockStyle}" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="风速" Style="{ThemeResource BodyTextBlockStyle}"/>
                                <TextBlock x:Name="WindText" Text="0 m/s" Style="{ThemeResource BodyTextBlockStyle}" Margin="0,5,0,15"/>
                                
                                <TextBlock Text="能见度" Style="{ThemeResource BodyTextBlockStyle}"/>
                                <TextBlock x:Name="VisibilityText" Text="0 km" Style="{ThemeResource BodyTextBlockStyle}" Margin="0,5,0,15"/>
                                
                                <TextBlock Text="日出时间" Style="{ThemeResource BodyTextBlockStyle}"/>
                                <TextBlock x:Name="SunriseText" Text="00:00" Style="{ThemeResource BodyTextBlockStyle}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    
                    <!-- Forecast -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="5天预报" 
                                   Style="{ThemeResource SubtitleTextBlockStyle}" 
                                   Margin="0,0,0,10"/>
                        
                        <ListView x:Name="ForecastListView" Grid.Row="1" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Day}" 
                                                   Style="{ThemeResource BodyTextBlockStyle}"/>
                                        
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Description}" 
                                                   Style="{ThemeResource BodyTextBlockStyle}" 
                                                   Margin="10,0"/>
                                        
                                        <TextBlock Grid.Column="2" 
                                                   Style="{ThemeResource BodyTextBlockStyle}">
                                            <Run Text="{Binding MinTemperature, Mode=OneWay}"/>/<Run Text="{Binding MaxTemperature, Mode=OneWay}"/>°
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Status bar -->
            <TextBlock x:Name="StatusText" 
                       Grid.Row="2" 
                       Text="就绪" 
                       Style="{ThemeResource CaptionTextBlockStyle}" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"/>
        </Grid>
    </Grid>
</Window>